<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user_name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Enter new Recipe:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="recipe-name">recipe name:</label>
        <input
          class="form-input"
          type="text"
          id="recipe-name"
          name="recipe-name"
        />
      </div>
      <div class="form-group">
        <fieldset class="large-5 cell recipe-category">
          <legend>What category:</legend>
          <input
            type="radio"
            name="Category"
            value="1"
            id="breakfastfood1"
            required
          /><label for="americanfood">Breakfast Food</label>
          <input
            type="radio"
            name="Category"
            value="2"
            id="lunchfood1"
          /><label for="asianfood">Lunch Food</label>
          <input
            type="radio"
            name="Category"
            value="3"
            id="dinnerfood1"
          /><label for="eufood">Dinner Food</label>
        </fieldset>
      </div>
            <div class="form-group">
        <fieldset class="large-5 cell recipe-visibility">
          <legend>Select one:</legend>
          <input
            type="radio"
            name="Category2"
            value= "1"
            id="breakfastfood"
          /><label for="americanfood">Public</label>
          <input
            type="radio"
            name="Category2"
            value="0"
            id="lunchfood"
          /><label for="asianfood">Private</label>
        </fieldset>
      </div>
      <div class="form-group">
        <label for="recipe-desc">description:</label>
        <textarea
          class="form-input"
          id="recipe-desc"
          name="recipe-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="recipe-ingredients">ingredients:</label>
        <textarea
          class="form-input"
          id="recipe-ingredients"
          name="recipe-ingredients"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="recipe-directions">directions:</label>
        <textarea
          class="form-input"
          id="recipe-directions"
          name="recipe-directions"
        ></textarea>
      </div>
      {{!-- <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div> --}}
    </form>
        <form id="imageForm">
      <input id="imageInput" type="file" accept="image/*" />
      <button type="submit" class="btn btn-primary">Create</button>
    </form>

  </div>

  {{#if tables.length}}
    <div class="col-md-6 recipe-list">
      <h3>Current Projects:</h3>

      {{#each tables as |table|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/recipe/{{table.id}}">{{table.recipe_name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id= "{{table.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
