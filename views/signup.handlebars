  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input form-control" type="text" id="name-signup" placeholder="Enter name"/>
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input form-control" type="text" id="email-signup" placeholder="Enter email"/>
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input form-control" type="password" id="password-signup" placeholder="Create password"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign up!</button>
      </div>
    </form>
  </div>

  <script src="./js/signup.js"></script>